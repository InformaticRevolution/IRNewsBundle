<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing 
                            http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ir_news_admin_article_list" pattern="/" methods="GET">
        <default key="_controller">IRNewsBundle:Admin/Article:list</default>
    </route>

    <route id="ir_news_admin_article_new" pattern="/new">
        <default key="_controller">IRNewsBundle:Admin/Article:new</default>
    </route>

    <route id="ir_news_admin_article_show" pattern="/{id}" methods="GET">
        <default key="_controller">IRNewsBundle:Admin/Article:show</default>
    </route>

    <route id="ir_news_admin_article_edit" pattern="/{id}/edit">
        <default key="_controller">IRNewsBundle:Admin/Article:edit</default>
    </route>   
    
    <route id="ir_news_admin_article_delete" pattern="/{id}/delete" methods="GET">
        <default key="_controller">IRNewsBundle:Admin/Article:delete</default>
    </route>   
        
</routes>